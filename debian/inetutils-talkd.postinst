#!/bin/sh

set -e

if [ "$1" = "configure" ]; then
  if [ -x "$(which update-inetd)" ]; then
    # Fix broken talk entry, and replace with correct one
    update-inetd --group BSD --pattern '.*/talkd' --remove talk
    update-inetd --group BSD \
      --add "#<off># ntalk\tdgram\tudp4\twait\troot\t/usr/sbin/tcpd\t/usr/sbin/talkd"
  fi
fi

#DEBHELPER#

exit 0
